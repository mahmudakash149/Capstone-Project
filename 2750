#include <stdio.h>

int main() {
    printf("---------------------------------------\n");
    printf("| decimal   |  octal  |  Hexadecimal  |\n");
    printf("---------------------------------------\n");

    for (int i = 0; i <= 15; i++) {
        printf("| %7d   | %5o   | %9X       |\n", i, i, i);
    }

    printf("---------------------------------------");

    return 0;
}
